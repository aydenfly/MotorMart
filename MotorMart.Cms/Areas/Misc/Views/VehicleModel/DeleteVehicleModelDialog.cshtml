@model MotorMart.Cms.Areas.Misc.Models.VehicleModelViewModel

@if (Model.delete.CurrentModel != null)
{

<div id="dialog-delete" title="Delete '@Model.delete.CurrentModel.name '?">
    @using (Html.BeginRouteForm("VehicleModelDelete", new { @area = "misc", @modelid = Model.delete.modelid }, FormMethod.Post, new { }))
    {  
       @Html.AdminUIAlert("Warning", "You are about to delete '" + Model.delete.CurrentModel.name + "'. This action can NOT be reversed.")       
        <div id="error-messages"></div>
        @Html.HiddenFor(model => model.delete.modelid)
    } 
</div> 
}
else
{

<div id="dialog-cancel" title="Unable to delete '@Model.delete.CurrentModel.name '">    
    @Html.AdminUIAlert("Unable to delete '" + Model.delete.CurrentModel.name + "'.")
</div> 
}