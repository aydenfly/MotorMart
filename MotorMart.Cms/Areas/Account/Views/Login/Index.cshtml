@model MotorMart.Cms.Areas.Account.Models.AdminLoginViewModel
@using MotorMart.Core.HtmlHelpers;
@using MotorMart.Core.Common;

<!DOCTYPE html>
<html>
<head>
    <meta content="text/html; charset=utf-8" />
    <title>Motor Mart | Content  Management System</title>
    <link href="@Url.Content("~/Content/css/admin.css")" rel="stylesheet" type="text/css" />
    <link type="text/css" href="@Url.Content("~/Content/css/plugins/treeview/jquery.treeview.css")" rel="stylesheet" />
    
    <script src="@Url.Content("~/Content/scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/scripts/plugins/jquery.cookie.js")"></script>
</head>
<body>

@using (Html.BeginForm("index", "login", new { @area = "account" }, FormMethod.Post))
{ 
    
<div id="login" class="section">
	<div class="panelLogin">
        <div class="panelHeader">
            @Html.Image(GlobalSettings.AdminLoginLogo, "")
        </div>
        <div class="panelContentOuter">
            <div class="panelContentInner">
                <div class="form-section">
                    <div class="form-section-row">
                        @Html.LabelFor(model => model.login.email)
                        @Html.TextBoxFor(model => model.login.email)
                        @Html.ValidationMessageFor(model => model.login.email)
                    </div>
                    <div class="form-section-row">
                        @Html.LabelFor(model => model.login.password)
                        @Html.PasswordFor(model => model.login.password, new { @id = "password" })
                        @Html.ValidationMessageFor(model => model.login.password)
                    </div>
                    <div class="form-section-row">
                        @Html.AdminSubmitButton("Login")
                        @Html.ValidationMessage("Login")
                    </div>
                </div>                        
                <span class="versionlabel">Version @GlobalSettings.ApplicationVersion</span>
            </div>
        </div>
    </div>
</div>
		
}
</body>
</html>